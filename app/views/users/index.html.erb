<div class="users_list">
  <div class="users_header">
    <h2 class="users">ユーザー一覧</h2>
  </div>
    <% if user_signed_in? %>
    <h3 class="current_user_nav"><%= current_user.nickname %>さんでログインしています</h3>
    <div class="user_lists">
      <% @users.each do |u| %>
      <p><a href="/users/<%= u.id %>"><%= u.nickname %>さん</a></p>
      
      <% end %>
    <% else %>
      <%= link_to "ユーザーを登録する", new_user_registration_path %>
      <br>
      <%= link_to "ログインする", new_user_session_path %>
    <% end %>
    </div>
  </div>
</div>